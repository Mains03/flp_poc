add :: Nat -> Nat -> Nat
add n m = case m of
              0 -> n
            | z + 1 -> (add n z) + 1.
            
sum :: [Nat] -> Nat
sum xs = case xs of 
              [] -> 0
            | (z:zs) -> add z (sum zs).
            
length :: [Nat] -> Nat
length xs = case xs of
              [] -> 0
            | (z:zs) -> (length zs) + 1.
            
exists xs :: [Nat]. length xs =:= 7. sum xs =:= 5. xs.